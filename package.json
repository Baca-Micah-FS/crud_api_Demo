{
  "name": "apiWithClient",
  "version": "1.0.0",
  "engines": {
    "node": "22.19.0"
  },
  "main": "index.js",
  "scripts": {
    "install-reactjs": "npm install --prefix reactapp",
    "install-api": "npm install --prefix api",
    "build-reactjs": "npm run build --prefix reactapp",
    "heroku-postbuild": "concurrently \"npm:install-*\"; concurrently \"npm:build-*\"; ",
    "start": "npm start --prefix api",
    "dev:react": "concurrently --raw \"npm run api\" \"cd reactapp && npm run dev\"",
    "react": "cd reactapp && npm run start",
    "api": "cd api; nodemon server.js"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
